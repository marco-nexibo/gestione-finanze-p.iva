# Configurazione per ForfettApp SaaS
# Copia questo file come .env e modifica i valori

# JWT Secret (cambia in produzione!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-forfettapp-2024

# Porta del server
PORT=3001

# Ambiente
NODE_ENV=development

# Stripe (da configurare quando aggiungeremo i pagamenti)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (per invio email di benvenuto e notifiche)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# URL dell'app (per link nelle email)
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Google OAuth (per accesso con Google)
# Ottieni le credenziali da: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
